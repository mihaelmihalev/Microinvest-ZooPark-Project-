        <ListView Name="ListZemnovodni" Margin="0,0,20,-370"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="340" Height="126">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Header="Земноводни" Width="320" />

                </GridView>
            </ListView.View>

        </ListView>
    </Grid>
</Window>
